.gzhel
    font-family Balkara, serif
    color #636060
    .wrapper
        padding 0 24px
        @media screen and (min-width: 1200px)
            padding 0 calc(50vw - 550px)
    header
        height 3rem
        display flex
        justify-content flex-end
        font-size 16px
        mso-width-source 100%
        .navbar>.navbar-toggler
            border none
            outline none
            box-shadow none
        @media screen and (min-width: 576px)
            justify-content center
        .nav-link
            color #003399
            padding 0.1rem 0.2rem
            &:hover
                background-color #0055cc1a
                color #0055cc
            &.show
                color #0055cc
        .dropdown-menu
            background-color #0055cc80
            backdrop-filter blur(2px)
            border none
            padding 0.2rem
            //width max-content
            .dropdown-item
                background-color transparent
                position static
                padding .4rem .2rem
                border-radius .2rem
                //width max-content
            .nav-link
                color #fff
                width 100%
                border-radius .2rem
                text-align left
                &:hover
                    background-color #0055cc
        .offcanvas.show
            .dropdown-menu
                background-color transparent
                padding 0 1rem
                .dropdown-item
                    padding 0
            .nav-link
                color inherit
                &:hover
                    background-color #0055cc1a
    .home_title
        height calc(100vh - 3rem)
        background-image url(./img/ghzel/top.png)
        background-size auto 80%
        background-repeat no-repeat
        background-position top center
        display flex
        flex-direction column
        box-sizing border-box
        padding-bottom 1rem
        position relative
        color #003399
        justify-content center
        @media screen and (min-width: 576px)
            justify-content flex-end
            background-size auto 75vh
        &::before
            content ""
            position absolute
            height 100%
            background-color #fff8
            width 100%
            top 0
            @media screen and (min-width: 576px)
                background-color transparent
                height 75vh
        h1
            font-family "A la russ", serif
            text-transform uppercase
            justify-self center
            font-size 5rem
            text-align center
            position relative
            z-index 1
        h2
            position absolute
            z-index 1
            text-align center
            justify-self center
            text-transform uppercase
            font-size 2vw
            margin 0
            bottom 1rem
            width 100%
            @media screen and (min-width: 576px)
                position relative
                bottom 0
                font-size 1.5vw

    .home_design
        article
            padding-top 2rem
            display grid
            gap 1rem
            img
                width 100%
            @media screen and (min-width: 576px)
                grid-template-columns repeat(2, 1fr)
                &:nth-of-type(2)
                    div
                        grid-row-start -1

    .custom_btn
        border-radius 50px
        border 2px solid #3b40d9
        color #3b40d9
        cursor pointer
        display flex
        align-items center
        padding .4rem 1rem
        width max-content
        margin 0 auto
    .home_issue
        display grid
        justify-content center
        gap 1rem
        img
            max-width 100%
    h2
        color #003399
        text-shadow 1px 1px 3px #0516536d
        text-align center
        margin-bottom 1em
        margin-top 3rem
        font-size 32px
    h3
        color #003399
        font-size 20px
        margin-bottom 1em
        text-align center
    p
        text-align justify
        margin-bottom 1em
        font-size: 16px;
        &::first-letter
            font-size: 300%;
            line-height: 1rem;
            float: left;
            margin-right: 0.15rem;
            margin-top: 0.1rem;
            padding-right: 0;
            text-transform: uppercase;
            color: #003399;
.gzhel footer {
    color: lightblue;
}