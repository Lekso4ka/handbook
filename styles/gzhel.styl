.gzhel
    font-family Balkara, serif
    color #636060
    .wrapper
        padding 0 24px
        @media screen and (min-width: 1200px)
            padding 0 calc(50vw - 550px)
    header
        height 3rem
        display flex
        justify-content flex-end
        font-size 16px
        mso-width-source 100%
        .navbar>.navbar-toggler
            border none
            outline none
            box-shadow none
        @media screen and (min-width: 576px)
            justify-content center
        .nav-link
            color #003399
            padding 0.1rem 0.2rem
            &:hover
                background-color #0055cc1a
                color #0055cc
            &.show
                color #0055cc
        .dropdown-menu
            background-color #0055cc80
            backdrop-filter blur(2px)
            border none
            padding 0.2rem
            //width max-content
            .dropdown-item
                background-color transparent
                position static
                padding .4rem .2rem
                border-radius .2rem
                //width max-content
            .nav-link
                color #fff
                width 100%
                border-radius .2rem
                text-align left
                &:hover
                    background-color #0055cc
        .offcanvas.show
            .dropdown-menu
                background-color transparent
                padding 0 1rem
                .dropdown-item
                    padding 0
            .nav-link
                color inherit
                &:hover
                    background-color #0055cc1a
    .home_title
        height calc(100vh - 3rem)
        background-image url(./img/ghzel/top.png)
        background-size auto 80%
        background-repeat no-repeat
        background-position top center
        display flex
        flex-direction column
        box-sizing border-box
        padding-bottom 1rem
        position relative
        color #003399
        justify-content center
        @media screen and (min-width: 576px)
            justify-content flex-end
            background-size auto 75vh
        &::before
            content ""
            position absolute
            height 100%
            background-color #fff8
            width 100%
            top 0
            @media screen and (min-width: 576px)
                background-color transparent
                height 75vh
        h1
            font-family "A la russ", serif
            text-transform uppercase
            justify-self center
            font-size 5rem
            text-align center
            position relative
            z-index 1
        h2
            position absolute
            z-index 1
            text-align center
            justify-self center
            text-transform uppercase
            font-size 2vw
            margin 0
            bottom 1rem
            width 100%
            @media screen and (min-width: 576px)
                position relative
                bottom 0
                font-size 1.5vw

    .home_design
        article
            padding-top 2rem
            display grid
            gap 1rem
            img
                width 100%
            @media screen and (min-width: 576px)
                grid-template-columns repeat(2, 1fr)
                &:nth-of-type(2)
                    div
                        grid-row-start -1

    .custom_btn
        border-radius 50px
        border 2px solid #3b40d9
        color #3b40d9
        cursor pointer
        display flex
        align-items center
        padding .4rem 1rem
        width max-content
        margin 0 auto
    .home_issue
        display grid
        justify-content center
        gap 1rem
        img
            max-width 100%
    h2
        color #003399
        text-shadow 1px 1px 3px #0516536d
        text-align center
        margin-bottom 1em
        margin-top 3rem
        font-size 32px
    h3
        color #003399
        font-size 20px
        margin-bottom 1em
        text-align center
    p
        text-align justify
        margin-bottom 1em
        font-size 16px
        &:not(.no-letter)::first-letter
            font-size: 300%;
            line-height: 1rem;
            float: left;
            margin-right: 0.15rem;
            margin-top: 0.1rem;
            padding-right: 0;
            text-transform uppercase
            color #003399
    .content
        padding 2rem 0
        display grid
        gap 2rem
        position relative
        @media screen and (min-width: 1200px)
            grid-template-columns 3fr 2fr
        .caption
            font-family "A la russ", serif
            font-size 5vw
            //white-space nowrap
            text-align center
            padding 300px 0 0
            position relative
            letter-spacing 0.02rem
            line-height 1.05
            color #003399
            margin 0
            &::before
                content ""
                height 300px
                width 100%
                position absolute
                top 0
                left 0
                background-image url(./img/ghzel/top_art.png)
                background-position center
                background-size contain
                background-repeat no-repeat
        h1:not(.caption)
            font-size 1.5vw
            max-width 80%
            letter-spacing 0.15rem
            color #3439c0
            text-align center
            margin 0 auto
        main ul
            display grid
            line-height 1.3
            justify-items center
            text-align center
            color #434141
            margin 1.5rem 0 2rem
            li:last-child
                text-decoration underline
                cursor pointer
                color #003399
                &:hover
                    color #0055cc
        img, video
            border 2px solid #2d2c2c
            border-radius 100px 20px 90px 25px / 20px 80px 30px 100px
            max-width 100%
            padding 0.2rem

        figcaption
            font-size 0.75rem
            color #4341418c
            font-family 'Balkara', serif
            line-height 1.4
            text-align justify
            padding calc(2px + 0.2rem)
            margin-bottom 1rem
        .letter
            position relative
            &::first-letter
                font-size 0
            &.letter_o::before
                    height calc(4em * 1.5)
                    width calc(4em * 1.5 / 1.18)
                    float left
                    content ""
                    background-image url(./img/ghzel/letters/O.png)
                    background-repeat no-repeat
                    background-size contain
        .p2_2
            float left
            margin-right 1rem
            figcaption
                display none
        .p1_2
            width 60%
            float right
            margin-left 1rem
        .p1_4
            float left
            width 50%
            margin-right 1rem
        .p1_6
            float right
            width 36%
            margin-left 1rem
            //figcaption
            //    display none
        .finish
            width 100%
            text-align center
        .finish_left
            float left
            width 30vw
            height calc(5rem * 1.5)
            shape-outside polygon(0% 20%, 100% 100%, 0 100%)
        .finish_right
            float right
            width 30vw
            height calc(5rem * 1.5)
            shape-outside polygon(100% 20%, 0% 100%, 100% 100%)
    @media screen and (min-width: 1200px)
        aside
            position fixed
            height calc(100vh - 10rem)
            //background-color green
            right calc(50vw - 550px)
            top 5rem
            width calc(1100px / 5 * 2 - 2rem)




