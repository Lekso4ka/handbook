@import "./variables.styl"

.suprematism
    header
        z-index 10
        position fixed
        width 200px
        top 0
        bottom 0
        left 0
        font-family "Next Art", fantasy
        font-weight 600
        background-color transparent
        .custom_btn-nav
            width 2rem
            height 2rem
            background-color su-additional
            border-radius 1px
            right 0
            top 0
            position fixed
            padding 0
            svg
                width 100%
                height 100%
                fill su-white
        #navbar
            background-color su-primary-63
        .navbar-nav
            display grid !important
            grid-template-columns 20px 60px 60px 20px 40px
            position fixed
            padding 0
            top 0
            left 0
            bottom 0
            width 200px
            align-content flex-end
        .nav-item
            height 100%
            width 100vh
            transform-origin left top
            display flex
            justify-content center
            position relative
            &:nth-child(1)
                background-color transparent
                justify-content flex-end
                transform rotate(-90deg) translate(-60px, 0)
                .nav-link
                    padding-right 40px
                    color su-black
                    height 20px
            &:nth-child(2)
                background-color #000
                justify-content flex-start
                height 60px
                width 80vh
                transform rotate(-90deg) translate(-60px, 0)
                z-index 3
                .nav-link
                    padding-left 40px
                    color #fff
            &:nth-child(3)
                background-color #f00
                transform rotate(-90deg) translate(40vh, 0)
                height 60px
                width 40vh
                z-index 1
                .nav-link
                    color su-black
                .dropdown-menu
                    background-color su-black
            &:nth-child(4)
                background-color su-primary
                transform rotate(-90deg) translate(16vh, -20px)
                justify-content flex-start
                padding-left .2rem
                width 30vh
                z-index 2
                height 40px
                .nav-link
                    color su-black
            &:nth-child(5)
                background-color su-black
                transform rotate(-90deg) translate(-60px, 0)
                height 40px
                .nav-link
                    color su-primary
            .dropdown-menu
                position fixed
                z-index 10
                left 200px
                top 200px
                transform rotate(90deg) translate(-100%)
                height max-content
                padding 0
                background-color su-secondary
                border-radius 0
                bottom 0
                transform-origin top left
                &.show
                    .dropdown-menu
                        transform none
                        top 100%
                        left -1rem
                        background-color su-primary
                        .nav-link
                            color su-black
                .dropdown-item
                    background-color transparent
                    position static
                    padding 0
                    border-radius .2rem
                .nav-link
                    color su-white
                    width 100%
                    border-radius .2rem
                    text-align left
                    padding .2rem 1rem
                    &:hover
                        background-color su-secondary
        @media screen and (min-width: 576px)
            background-color su-primary-50
            #navbar
                background-color transparent