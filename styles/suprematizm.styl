.suprematism
    background-image url("./img/suprematism/square.png")
    background-size cover
    background-attachment fixed
    color #dedede
    font-family NewsCycle, sans-serif
    font-weight bold
    header
        z-index 10
        position fixed
        width 200px
        top 0
        bottom 0
        left 0
        font-family "Next Art", fantasy
        font-weight 600
        background-color transparent
        #navbar
            background-color #D4AF37af
        .navbar-nav
            display grid !important
            grid-template-columns 20px 60px 60px 20px 40px
            position fixed
            padding 0
            top 0
            left 0
            bottom 0
            width 200px
            align-content flex-end
        .nav-item
            height 100%
            width 100vh
            transform-origin left top
            display flex
            justify-content center
            position relative
            &:nth-child(1)
                background-color transparent
                justify-content flex-end
                transform rotate(-90deg) translate(-60px, 0)
                .nav-link
                    padding-right 40px
                    color #000
                    height 20px
            &:nth-child(2)
                background-color #000
                justify-content flex-start
                //transform rotate(-90deg) translate(-60px, 0)
                height 60px
                width 80vh
                transform rotate(-90deg) translate(-60px, 0)
                z-index 3
                .nav-link
                    padding-left 40px
                    color #fff
            &:nth-child(3)
                background-color #f00
                transform rotate(-90deg) translate(40vh, 0)
                height 60px
                width 40vh
                z-index 1
                .nav-link
                    color #000
                .dropdown-menu
                    background-color #000
            &:nth-child(4)
                background-color #D4AF37
                transform rotate(-90deg) translate(16vh, -20px)
                justify-content flex-start
                //transform rotate(-90deg) translate(-20px, 0)
                width 30vh
                z-index 2
                height 40px
                .nav-link
                    color #000
            &:nth-child(5)
                background-color #000
                transform rotate(-90deg) translate(-60px, 0)
                //transform rotate(-90deg) translate(-40px, 0)
                //width 100vh
                height 40px
                .nav-link
                    color #D4AF37
            .dropdown-menu
                position fixed
                z-index 10
                left 200px
                top 200px
                transform rotate(90deg) translate(-100%)
                height max-content
                padding 0
                background-color red
                border-radius 0
                bottom 0
                transform-origin top left
                &.show
                    .dropdown-menu
                        transform none
                        top 100%
                        left -1rem
                        background-color #D4AF37
                        .nav-link
                            color #000
                .dropdown-item
                    background-color transparent
                    position static
                    padding 0
                    border-radius .2rem
                .nav-link
                    color #fff
                    width 100%
                    border-radius .2rem
                    text-align left
                    padding .2rem 1rem
                    &:hover
                        background-color #f00
        @media screen and (min-width: 576px)
            background-color #D4AF3780
            #navbar
                background-color transparent
    h2
        font-family "Next Art", fantasy
        font-size 4vw
    p
        font-size 20px
        letter-spacing .1rem
        font-family NewsCycle, sans-serif
        text-align justify
        hyphens auto
        text-wrap balance
    .wrapper
        padding 0 24px
        background-color #D4AF370f
        @media screen and (min-width: 576px)
            padding 0 20px 0 220px
        @media screen and (min-width: 1200px)
            padding 0 50px 0 250px
    .home
        display grid
        align-content flex-start
        align-items flex-start
        gap 0 2rem
        @media screen and (min-width: 1200px)
            grid-template-columns repeat(3, 1fr)
    .offcanvas
        width 200px
        padding: 0
    .offcanvas-header
        position absolute
        right 0
        z-index 10
        padding 10px
        .offcanvas-title
            display none
        .btn-close
            filter: invert(100%)
    .offcanvas-body
        padding 0
        overflow visible
    .home_title
        display block
        padding 20vh 0
        h1
            font-family "Rodchenko Constructed", serif
            font-size 8vw
            color #f00
        h2
            font-family "Rodchenko Grotesk"
            color #D4AF37
            text-align right
    img, video
        max-width 100%
    @media screen and (min-width: 1200px)
        #about
            display grid
            grid-column-end span 3
            grid-template-columns repeat(2, 1fr) 300px
            gap 1rem 2rem
            background-image url("./img/suprematism/pic1.png")
            background-size contain
            background-repeat no-repeat
            background-position right center
            :nth-child(2)
                grid-column-start 1
                grid-row-start 2s
            :nth-child(3)
                grid-row-start 2
                grid-row-end 3
                grid-column-start 2
            :nth-child(4)
                grid-row-start 1
                grid-column-start 2
        .home_title
            grid-column-end span 3
        .home_design
            padding-left 1rem
            grid-column 2 / 4
            display grid
            grid-template-columns repeat(2, 1fr)
            gap 1rem 2rem
            position relative
            &::before
                content ""
                background-color #D4AF37a1
                width 10px
                height 100%
                position absolute
            h3
                background-color #f005
                font-family "Rodchenko Grotesk"
            img
                float left
                width 30%
                margin-right 1rem
            &+section
                grid-column-start 1
                grid-row-start 3

        .home_design_top
            grid-column-end span 2
        .home_issue
            display grid
            gap 1rem
            img
                width 100%
    .custom_btn
        align-self baseline
        background-color #000
        color #f2f2f2
        display flex
        padding .6rem 4rem
        width max-content
        align-items centerr
        font-family "Next Art", fantasy

    section
        margin-bottom 3rem
    .p1_2
        position relative
        display block
        img
            line-height 1
        &::after
            content ""
            position absolute
            display block
            top 0
            left 0
            right 0
            bottom 0
            width 100%
            height: 100%
            background-image url(./img/suprematism/pic_1_2.png)
            background-size 100%
            background-repeat no-repeat
            background-position left top
            z-index 1
            animation opacity 10s linear infinite
    .p1_3
        position relative
        display block
        img
            line-height 1
        &::after
            content ""
            position absolute
            display block
            top 0
            left 0
            right 0
            bottom 0
            width 100%
            height 100%
            background-image url(./img/suprematism/pic_1_3.png)
            background-size cover
            background-repeat no-repeat
            background-position right top
            z-index 1
            animation translate 10s linear 3s infinite
    .p1_6
        position relative
        display block
        img
            line-height 1
        &::after
            content ""
            position absolute
            display block
            top 0
            left 0
            right 0
            bottom 0
            width 100%
            height: 100%
            background-image url(./img/suprematism/pic_1_6.png)
            background-size 100%
            background-repeat no-repeat
            background-position left top
            z-index 1
            animation opacity 10s linear infinite
    .p3_1
        position relative
        display block
        height max-content
        img
            line-height 1
        &::after
            content ""
            position absolute
            display block
            top 0
            left 0
            right 0
            bottom 0
            width 100%
            height 100%
            background-image url(./img/suprematism/pic_3_1.png)
            background-color red
            background-size contain
            background-repeat no-repeat
            background-position left top
            animation opacity 5s linear infinite
            z-index 1
    .caption
        font-family "Rodchenko Constructed", serif
        font-size 6rem
        color #f00
        line-height 1
    .content
        section
            //height 100vh
            box-sizing border-box
            column-count 2
            //column-rule .2rem dashed red
            column-gap 2rem
            padding 0
            @media screen and (min-width: 1200px)
                column-count 4
                column-gap 2rem
            h2
                column-span all
                position relative
                &::before
                    content ""
                    background-color #D4AF37a1
                    width 50%
                    height 10px
                    position absolute
                    top .8em
                    z-index -1
            &.section_2_1
            &.section_1_1
            &.section_3_1
                column-count 1
                padding 3rem 0
                display grid
                grid-template-columns 1fr 2fr
                grid-template-rows auto auto auto 1fr
                gap 1rem 2rem
                align-content flex-start
                align-items flex-start
                .caption
                    grid-column-end span 2
                    margin 2rem 0
                    text-align left
                h1:not(.caption)
                    grid-column-start 2
                    font-family "Rodchenko Grotesk"
                    color #D4AF37
                    text-align right
                figure
                    grid-column-start 2
                    grid-row-start 3
                    grid-row-end span 2
                    width 100%
                p:not(.caption)
                    grid-row-start 4
                    column-count 2
                    column-gap 2rem
                    margin 0
            &.section_1_1
                figure
                    grid-column-start 1
                    grid-row-start 3
                p:not(.caption)
                    grid-row-start 4
                    grid-column-start 2
                    column-count 2
                    column-gap 2rem
                    margin 0
            &.section_3_1
                grid-template-rows auto auto 1fr
                figure
                    grid-column-start 1
                    grid-row-start 2
                    grid-row-end span 5
                p:not(.caption)
                    grid-row-start auto
                    column-count 2
                    column-gap 2rem
                    margin 0
                    &:nth-of-type(1)
                        column-count 1
                    &:nth-of-type(2)
                        column-count 1
            &.section_3_9
                column-count 1
        figure
            position relative
            height max-content
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction column
            figcaption
                font-size 50%
                align-self flex-start
            &.style1
                &::before
                    background-color: #ff000050;
                figcaption
                    background-color: #0005;
                    color: #fff;
                    padding: 8px;
                    width: 60%;
                    top: 50%;
                    transform: rotate(-24deg);
                    max-width: max-content;
                    z-index: 2;
                    position: absolute;
            &.style2
                &::before
                    background-color: #d4af3780;
                figcaption
                    background-color: #f2f2f2;
                    color: #f00;
                    padding: 8px;
                    width: 300px;
                    top: 0;
                    right: 0;
                    transform: rotate(90deg) translate(200px, -300px);
                    transform-origin: top left;
                    z-index: 2;
                    position: absolute;
            &.style3
                &::before
                    background-color: #f2f2f280;
                    backdrop-filter: invert(20%) contrast(100%);
                figcaption
                    background-color: #f00;
                    color: #000;
                    padding: 8px;
                    width: 400px;
                    max-width: 100%;
                    bottom: 0;
                    left: 0;
                    z-index: 2;
                    position: absolute;
            &.style4 figcaption
                    display none
    aside
        display grid
        @media(min-width: 1200px)
            //grid-template-columns repeat(2, 1fr)
            gap 2rem
    #map
        filter saturate(10) invert(1)
    .meta-names
        display grid;
        grid-template-columns repeat(4, 1fr)
        gap .5rem
        li
            cursor pointer
            border 1px solid
            text-align center
            padding 4px 0
            font-family "Rodchenko Grotesk", seif
            color #d4af37
            &.active
                background-color black
    .meta-content
        padding 1rem 0

        & > div
            gap 1rem
            flex-wrap wrap
            &.active
                display flex
    .meta-line
        grid-template-columns 1fr auto
        display grid
        gap .2rem
        flex-grow: 1
    .meta-text
        min-width max-content
        display flex
        border 1px solid
        justify-content: center;
        align-items stretch
        font-family "Rodchenko Constructed", serif
        font-size 1.2em
        .link
            cursor pointer
            display flex
            align-items center
            flex 1
            padding 0 1rem
            &:hover
                background-color midnightblue
    .sup-content
        display flex
        align-items stretch
        gap .2rem
        flex-wrap wrap
        .sup
            cursor pointer
            display flex
            justify-content: center;
            align-items: center;
            padding 5px
            line-height 1
            flex 1
            border 1px solid
            background-color #d4af3780;
            &:hover
                background-color #d4af37
    .marker
        //background-color black
        border-left 10px solid transparent
        border-right 10px solid transparent
        border-bottom 20px solid blue
    [data-type]
        font-family "Rodchenko Constructed", seif
        line-height 1
        &.show
            border 1px solid
            display inline-block
            line-height 1
            text-align center
            background-color #D4AF37a1
            padding 5px
            margin 0
            transition-property font-size, color, border, background
            transition-duration 1s
            &.active
                background-color midnightblue
    .hidden_char
        display none